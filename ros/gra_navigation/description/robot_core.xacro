<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro"/>

    <!-- links and joints go here -->

    <!-- The rest of the robot can be described from base_link, which is the centre point of the four driving wheels -->
    <link name="base_link">
    </link>

    <!-- chassis joint goes here. It connects chassis to base_link via fixed joint -->
    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint> launch-prefix="bash -c 'sleep 5; $0 $@'"
    <!-- chassis description goes here. Needs to be updated when accurate dimension of the car is known-->
    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.3" rpy="0 0 0"/>
            <geometry>
                <!-- <box size="2.5 0.75 0.5"/> -->
                <mesh filename="package://gra_base/meshes/ads-dv.stl"/>
            </geometry>
            <material name="white"/>
        </visual>
        <!-- physics model -->
        <collision>
            <origin xyz="0 0 0.3" rpy="0 0 0"/>
            <geometry>
                <box size="2.5 0.75 0.5"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="300" x="2.5" y="0.75" z="0.5">
            <origin xyz="0 0 0.3" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>
    <joint name="laser_joint" type="fixed">
        <parent link="chassis"/>
        <child link="laser"/>
        <origin xyz="1 0 0.575" rpy="0 0 0"/>
    </joint>
    <link name="laser">
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <cylinder length="0.05" radius="0.05"/>
            </geometry>
            <material name="black"/>
        </visual>
    </link>
    <!-- gazebo specific description -->
    <gazebo reference="chassis">
        <material>Gazebo/White</material>
    </gazebo>

    <!-- WHEEL 1 (CLOCKWISE) -->
    <joint name="wheel_1_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_1"/>
        <origin xyz="1.25 0.5 0.2" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_1">
        <visual>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.25" radius="0.20">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_1">
        <material>Gazebo/Black</material>
        <mu1 value="0.2"/>
        <mu2 value="1.5"/>
        <kp value="10000000.0" />
        <kd value="10000.0" />
        <fdir1 value="0 0 1"/>
        <maxContacts value= "1"/>
    </gazebo>

    <!-- WHEEL 2 -->
    <joint name="wheel_2_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_2"/>
        <origin xyz="1.25 -0.5 0.2" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_2">
        <visual>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.25" radius="0.20">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_2">
        <material>Gazebo/Black</material>
        <mu1 value="0.2"/>
        <mu2 value="1.5"/>
        <kp value="10000000.0" />
        <kd value="10000.0" />
        <fdir1 value="0 0 1"/>
        <maxContacts value= "1"/>
    </gazebo>

    <!-- WHEEL 3 -->
    <joint name="wheel_3_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_3"/>
        <origin xyz="-1.25 -0.5 0.2" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_3">
        <visual>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.25" radius="0.20">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_3">
        <material>Gazebo/Black</material>
        <mu1 value="0.2"/>
        <mu2 value="1.5"/>
        <kp value="10000000.0" />
        <kd value="10000.0" />
        <fdir1 value="0 0 1"/>
        <maxContacts value= "1"/>
    </gazebo>

        <!-- WHEEL 4 -->
    <joint name="wheel_4_joint" type="continuous">
        <parent link="base_link"/>
        <child link="wheel_4"/>
        <origin xyz="-1.25 0.5 0.2" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="wheel_4">
        <visual>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>      
                <cylinder length="0.25" radius="0.20" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="5" length="0.25" radius="0.20">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="wheel_4">
        <material>Gazebo/Black</material>
        <mu1 value="0.2"/>
        <mu2 value="1.5"/>
        <kp value="10000000.0" />
        <kd value="10000.0" />
        <fdir1 value="0 0 1"/>
        <maxContacts value= "1"/>
    </gazebo>

    <!-- Common Steering Link -->
    <link name="front_steering_link">
        <visual>
            <geometry>
                <box size="0.1 1.0 0.1"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <geometry>
                <box size="0.1 1.0 0.1"/>
            </geometry>
        </collision>
    </link>

    <!-- Joint connecting base_link to common steering link -->
    <joint name="front_steering_joint" type="revolute">
        <parent link="base_link"/>
        <child link="front_steering_link"/>
        <origin xyz="1.25 0 0.2" rpy="0 0 0"/>
        <axis xyz="0 0 1"/>
        <limit lower="-0.5236" upper="0.5236" effort="100" velocity="1"/> <!-- -30 to 30 degrees in radians -->
    </joint>

    <!-- Fixed joints connecting front wheels to common steering link -->
    <joint name="wheel_1_to_steering_joint" type="fixed">
        <parent link="front_steering_link"/>
        <child link="wheel_1"/>
        <origin xyz="0 0.5 0" rpy="${pi/2} 0 0"/>
    </joint>

    <joint name="wheel_2_to_steering_joint" type="fixed">
        <parent link="front_steering_link"/>
        <child link="wheel_2"/>
        <origin xyz="0 -0.5 0" rpy="-${pi/2} 0 0"/>
    </joint>


    <!-- Transmissions -->
    <transmission name="tran1">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_1_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor_1">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <transmission name="tran2">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_2_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor_2">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <transmission name="tran3">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_3_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor_3">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <transmission name="tran4">
        <type>transmission_interface/SimpleTransmission</type>
        <joint name="wheel_4_joint">
            <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
        </joint>
        <actuator name="motor_4">
            <hardwareInterface>VelocityJointInterface</hardwareInterface>
            <mechanicalReduction>1</mechanicalReduction>
        </actuator>
    </transmission>

    <gazebo>
        <plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
        </plugin>
    </gazebo>

</robot>
